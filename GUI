from tkinter import*

root = Tk()

headerLabel = Label(root, text = "Email meets Python",bg = "blue", fg = "white")
headerLabel.grid(row = 3)

fromAddress = Label(root, text = "From:")
toAddress = Label(root, text = "To:")

fromAddressEntry = Entry(root)
toAddressEntry = Entry(root)

fromAddress.grid(row = 0)
toAddress.grid(row = 1)

fromAddressEntry.grid(row = 0, column = 1)
toAddressEntry.grid(row = 1, column = 1)

sendButton = Button(root, text = "Send E-mail", fg = "blue")
sendButton.pack()

root.mainloop()

